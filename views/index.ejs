<!DOCTYPE html>
<html>
<head>
    <title>Team Info</title>
</head>
<body>
    <% teamInfo.forEach(info => { %>
        <div>
            <h2><%= info.name %></h2>
            <p>Team: <%= info.team %></p>
            <p>Mat: <%= info.mat %></p>
            <p>Time: <%= info.time %></p>
        </div>
    <% }); %>

    <ul id="list">
        <!-- Existing list items here -->
    </ul>

    <button id="refreshButton">Refresh</button>

    <script>
        function updateTeamInfo() {
            fetch('/team-info')
                .then(response => response.json())
                .then(teamInfo => {
                    // Clear the existing team info
                    const teamInfoDiv = document.getElementById('teamInfo');
                    teamInfoDiv.innerHTML = '';
    
                    // Add the new team info
                    teamInfo.forEach(info => {
                        const infoDiv = document.createElement('div');
                        infoDiv.innerHTML = `
                            <h2>${info.name}</h2>
                            <p>Team: ${info.team}</p>
                            <p>Mat: ${info.mat}</p>
                            <p>Time: ${info.time}</p>
                        `;
                        teamInfoDiv.appendChild(infoDiv);
                    });
                })
                .catch(error => console.error(`Error updating team info: ${error.message}`));
        }
    
        // Update the team info immediately when the page loads, and then every 15 seconds
        updateTeamInfo();
        setInterval(updateTeamInfo, 15000);
    </script>
    </body>
</html>